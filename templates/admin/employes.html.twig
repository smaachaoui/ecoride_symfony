{# templates/admin/employes.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Gestion des employés - Admin - EcoRide{% endblock %}

{% block body %}
    <section class="py-5 bg-light min-vh-100">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="h3 text-dark-green mb-1">
                        <i class="bi bi-person-badge me-2"></i>Gestion des employés
                    </h1>
                    <p class="text-muted mb-0">{{ employes|length }} employé(s)</p>
                </div>
                <div>
                    <a href="{{ path('app_admin_dashboard') }}" class="btn btn-outline-secondary me-2">
                        <i class="bi bi-arrow-left me-1"></i>Retour
                    </a>
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalCreerEmploye">
                        <i class="bi bi-person-plus me-1"></i>Créer un employé
                    </button>
                </div>
            </div>

            {# Liste des employés #}
            <div class="card border-0 shadow-sm">
                <div class="card-body p-0">
                    {% if employes|length > 0 %}
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Employé</th>
                                        <th>Email</th>
                                        <th>Date de création</th>
                                        <th>Statut</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for employe in employes %}
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="rounded-circle bg-info bg-opacity-25 d-flex align-items-center justify-content-center me-2" 
                                                         style="width: 40px; height: 40px;">
                                                        <i class="bi bi-person-badge text-info"></i>
                                                    </div>
                                                    <span class="fw-medium">{{ employe.pseudo }}</span>
                                                </div>
                                            </td>
                                            <td>{{ employe.email }}</td>
                                            <td class="text-muted">{{ employe.createdAt|date('d/m/Y à H:i') }}</td>
                                            <td>
                                                {% if employe.isSuspended %}
                                                    <span class="badge bg-danger">Suspendu</span>
                                                {% else %}
                                                    <span class="badge bg-success">Actif</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                <button type="button" 
                                                        class="btn btn-sm btn-outline-danger"
                                                        data-bs-toggle="modal" 
                                                        data-bs-target="#modalSupprimer{{ employe.id }}">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="p-5 text-center">
                            <i class="bi bi-person-badge text-muted" style="font-size: 3rem;"></i>
                            <h5 class="mt-3">Aucun employé</h5>
                            <p class="text-muted mb-0">Créez votre premier compte employé.</p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </section>

    {# Modal Créer Employé #}
    <div class="modal fade" id="modalCreerEmploye" tabindex="-1" aria-labelledby="modalCreerEmployeLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header border-0">
                    <h5 class="modal-title text-dark-green" id="modalCreerEmployeLabel">
                        <i class="bi bi-person-plus me-2"></i>Créer un compte employé
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fermer"></button>
                </div>
                <form action="{{ path('app_admin_employe_creer') }}" method="POST">
                    <div class="modal-body">
                        <input type="hidden" name="_token" value="{{ csrf_token('creer_employe') }}">
                        
                        <div class="mb-3">
                            <label for="pseudo" class="form-label">Pseudo</label>
                            <input type="text" class="form-control" id="pseudo" name="pseudo" required>
                        </div>

                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="email" required>
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">Mot de passe</label>
                            <input type="password" class="form-control" id="password" name="password" 
                                   minlength="8" required>
                            <div class="form-text">Minimum 8 caractères</div>
                        </div>
                    </div>
                    <div class="modal-footer border-0">
                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Annuler</button>
                        <button type="submit" class="btn btn-primary">Créer le compte</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    {# Modals Supprimer Employé #}
    {% for employe in employes %}
        <div class="modal fade" id="modalSupprimer{{ employe.id }}" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header border-0 bg-danger text-white">
                        <h5 class="modal-title">
                            <i class="bi bi-trash me-2"></i>Supprimer l'employé
                        </h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Fermer"></button>
                    </div>
                    <div class="modal-body">
                        <p>Êtes-vous sûr de vouloir supprimer le compte de <strong>{{ employe.pseudo }}</strong> ?</p>
                        <p class="text-muted small mb-0">Cette action est irréversible.</p>
                    </div>
                    <div class="modal-footer border-0">
                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Annuler</button>
                        <form action="{{ path('app_admin_employe_supprimer', {'id': employe.id}) }}" method="POST" class="d-inline">
                            <input type="hidden" name="_token" value="{{ csrf_token('supprimer_employe_' ~ employe.id) }}">
                            <button type="submit" class="btn btn-danger">Supprimer</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
{% endblock %}