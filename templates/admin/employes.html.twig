{# templates/admin/employes.html.twig #}

{% extends 'admin/base_admin.html.twig' %}

{% block title %}Gestion des employés - Admin EcoRide{% endblock %}

{% block admin_content %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 text-dark-green mb-0">
        <i class="bi bi-person-badge me-2"></i>Gestion des employés
    </h1>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalCreerEmploye">
        <i class="bi bi-plus-circle me-1"></i>Créer un employé
    </button>
</div>

{# Info card #}
<div class="alert alert-info mb-4">
    <i class="bi bi-info-circle me-2"></i>
    Les employés peuvent modérer les avis des utilisateurs. Ils n'ont pas accès aux fonctions d'administration.
</div>

{# Liste des employés #}
<div class="card border-0 shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th>ID</th>
                        <th>Employé</th>
                        <th>Email</th>
                        <th>Nom complet</th>
                        <th>Créé le</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for employe in employes %}
                        <tr>
                            <td>{{ employe.id }}</td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="rounded-circle bg-warning d-flex align-items-center justify-content-center me-2" 
                                         style="width: 40px; height: 40px;">
                                        <i class="bi bi-person-badge text-dark"></i>
                                    </div>
                                    <strong>{{ employe.pseudo }}</strong>
                                </div>
                            </td>
                            <td>{{ employe.email }}</td>
                            <td>
                                {% if employe.prenom or employe.nom %}
                                    {{ employe.prenom }} {{ employe.nom }}
                                {% else %}
                                    <span class="text-muted">Non renseigné</span>
                                {% endif %}
                            </td>
                            <td>{{ employe.createdAt|date('d/m/Y à H:i') }}</td>
                            <td class="text-end">
                                <div class="btn-group btn-group-sm">
                                    {# Modifier #}
                                    <button type="button" class="btn btn-outline-primary" 
                                            data-bs-toggle="modal" 
                                            data-bs-target="#modalModifierEmploye{{ employe.id }}"
                                            title="Modifier">
                                        <i class="bi bi-pencil"></i>
                                    </button>
                                    
                                    {# Supprimer #}
                                    <form action="{{ path('app_admin_employe_supprimer', {'id': employe.id}) }}" 
                                          method="POST" class="d-inline">
                                        <input type="hidden" name="_token" value="{{ csrf_token('supprimer_employe_' ~ employe.id) }}">
                                        <button type="submit" class="btn btn-outline-danger" title="Supprimer"
                                                onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet employé ?')">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>

                        {# Modal Modifier Employé #}
                        <div class="modal fade" id="modalModifierEmploye{{ employe.id }}" tabindex="-1" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <form action="{{ path('app_admin_employe_modifier', {'id': employe.id}) }}" method="POST">
                                        <input type="hidden" name="_token" value="{{ csrf_token('modifier_employe_' ~ employe.id) }}">
                                        <div class="modal-header">
                                            <h5 class="modal-title">
                                                <i class="bi bi-pencil me-2"></i>Modifier l'employé
                                            </h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                        </div>
                                        <div class="modal-body">
                                            <div class="row">
                                                <div class="col-md-6 mb-3">
                                                    <label for="prenom{{ employe.id }}" class="form-label">Prénom</label>
                                                    <input type="text" class="form-control" id="prenom{{ employe.id }}" 
                                                           name="prenom" value="{{ employe.prenom }}">
                                                </div>
                                                <div class="col-md-6 mb-3">
                                                    <label for="nom{{ employe.id }}" class="form-label">Nom</label>
                                                    <input type="text" class="form-control" id="nom{{ employe.id }}" 
                                                           name="nom" value="{{ employe.nom }}">
                                                </div>
                                            </div>
                                            <div class="mb-3">
                                                <label for="pseudoEmp{{ employe.id }}" class="form-label">Pseudo *</label>
                                                <input type="text" class="form-control" id="pseudoEmp{{ employe.id }}" 
                                                       name="pseudo" value="{{ employe.pseudo }}" required>
                                            </div>
                                            <div class="mb-3">
                                                <label for="emailEmp{{ employe.id }}" class="form-label">Email *</label>
                                                <input type="email" class="form-control" id="emailEmp{{ employe.id }}" 
                                                       name="email" value="{{ employe.email }}" required>
                                            </div>
                                            <div class="mb-3">
                                                <label for="passwordEmp{{ employe.id }}" class="form-label">
                                                    Nouveau mot de passe <small class="text-muted">(laisser vide pour ne pas changer)</small>
                                                </label>
                                                <input type="password" class="form-control" id="passwordEmp{{ employe.id }}" 
                                                       name="password" minlength="8">
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                            <button type="submit" class="btn btn-primary">Enregistrer</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <tr>
                            <td colspan="6" class="text-center py-5 text-muted">
                                <i class="bi bi-person-badge" style="font-size: 3rem;"></i>
                                <p class="mt-3 mb-0">Aucun employé pour le moment</p>
                                <p class="small">Cliquez sur "Créer un employé" pour en ajouter un</p>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

{# Modal Créer Employé #}
<div class="modal fade" id="modalCreerEmploye" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form action="{{ path('app_admin_employe_creer') }}" method="POST">
                <input type="hidden" name="_token" value="{{ csrf_token('creer_employe') }}">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="bi bi-person-plus-fill me-2"></i>Créer un compte employé
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="newPrenom" class="form-label">Prénom</label>
                            <input type="text" class="form-control" id="newPrenom" name="prenom">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="newNom" class="form-label">Nom</label>
                            <input type="text" class="form-control" id="newNom" name="nom">
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="newPseudoEmp" class="form-label">Pseudo *</label>
                        <input type="text" class="form-control" id="newPseudoEmp" name="pseudo" required>
                    </div>
                    <div class="mb-3">
                        <label for="newEmailEmp" class="form-label">Email *</label>
                        <input type="email" class="form-control" id="newEmailEmp" name="email" required>
                    </div>
                    <div class="mb-3">
                        <label for="newPasswordEmp" class="form-label">Mot de passe *</label>
                        <input type="password" class="form-control" id="newPasswordEmp" name="password" minlength="8" required>
                        <div class="form-text">Minimum 8 caractères</div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                    <button type="submit" class="btn btn-primary">Créer le compte</button>
                </div>
            </form>
        </div>
    </div>
</div>

{% endblock %}