{# templates/admin/utilisateurs.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Gestion des utilisateurs - Admin - EcoRide{% endblock %}

{% block body %}
    <section class="py-5 bg-light min-vh-100">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="h3 text-dark-green mb-1">
                        <i class="bi bi-people me-2"></i>Gestion des utilisateurs
                    </h1>
                    <p class="text-muted mb-0">{{ utilisateurs|length }} utilisateur(s)</p>
                </div>
                <a href="{{ path('app_admin_dashboard') }}" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-1"></i>Retour
                </a>
            </div>

            {# Filtres #}
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body">
                    <form method="GET" class="row g-3">
                        <div class="col-md-4">
                            <label for="search" class="form-label">Rechercher</label>
                            <input type="text" class="form-control" id="search" name="search" 
                                   value="{{ search }}" placeholder="Pseudo ou email...">
                        </div>
                        <div class="col-md-3">
                            <label for="role" class="form-label">Rôle</label>
                            <select class="form-select" id="role" name="role">
                                <option value="">Tous les rôles</option>
                                <option value="PASSAGER" {{ roleFilter == 'PASSAGER' ? 'selected' : '' }}>Passager</option>
                                <option value="CHAUFFEUR" {{ roleFilter == 'CHAUFFEUR' ? 'selected' : '' }}>Chauffeur</option>
                                <option value="EMPLOYE" {{ roleFilter == 'EMPLOYE' ? 'selected' : '' }}>Employé</option>
                                <option value="ADMIN" {{ roleFilter == 'ADMIN' ? 'selected' : '' }}>Admin</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="statut" class="form-label">Statut</label>
                            <select class="form-select" id="statut" name="statut">
                                <option value="">Tous</option>
                                <option value="actif" {{ statutFilter == 'actif' ? 'selected' : '' }}>Actif</option>
                                <option value="suspendu" {{ statutFilter == 'suspendu' ? 'selected' : '' }}>Suspendu</option>
                            </select>
                        </div>
                        <div class="col-md-2 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="bi bi-search me-1"></i>Filtrer
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            {# Liste des utilisateurs #}
            <div class="card border-0 shadow-sm">
                <div class="card-body p-0">
                    {% if utilisateurs|length > 0 %}
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Utilisateur</th>
                                        <th>Email</th>
                                        <th>Rôle</th>
                                        <th>Crédits</th>
                                        <th>Inscription</th>
                                        <th>Statut</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for user in utilisateurs %}
                                        <tr class="{{ user.isSuspended ? 'table-danger' : '' }}">
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    {% if user.photo %}
                                                        <img src="{{ asset('uploads/photos/' ~ user.photo) }}" 
                                                             class="rounded-circle me-2" width="35" height="35"
                                                             style="object-fit: cover;">
                                                    {% else %}
                                                        <div class="rounded-circle bg-light-green d-flex align-items-center justify-content-center me-2" 
                                                             style="width: 35px; height: 35px;">
                                                            <i class="bi bi-person text-dark-green"></i>
                                                        </div>
                                                    {% endif %}
                                                    <span class="fw-medium">{{ user.pseudo }}</span>
                                                </div>
                                            </td>
                                            <td class="small">{{ user.email }}</td>
                                            <td>
                                                {% if user.role == 'ADMIN' %}
                                                    <span class="badge bg-danger">Admin</span>
                                                {% elseif user.role == 'EMPLOYE' %}
                                                    <span class="badge bg-info">Employé</span>
                                                {% elseif user.role == 'CHAUFFEUR_PASSAGER' %}
                                                    <span class="badge bg-dark-green">Chauffeur & Passager</span>
                                                {% elseif user.role == 'CHAUFFEUR' %}
                                                    <span class="badge bg-success">Chauffeur</span>
                                                {% else %}
                                                    <span class="badge bg-secondary">Passager</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                <i class="bi bi-coin text-warning me-1"></i>{{ user.credits }}
                                            </td>
                                            <td class="small text-muted">{{ user.createdAt|date('d/m/Y') }}</td>
                                            <td>
                                                {% if user.isSuspended %}
                                                    <span class="badge bg-danger">Suspendu</span>
                                                {% else %}
                                                    <span class="badge bg-success">Actif</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if user.role != 'ADMIN' %}
                                                    {% if user.isSuspended %}
                                                        <form action="{{ path('app_admin_reactiver', {'id': user.id}) }}" 
                                                              method="POST" class="d-inline">
                                                            <input type="hidden" name="_token" value="{{ csrf_token('reactiver_' ~ user.id) }}">
                                                            <button type="submit" class="btn btn-sm btn-success" title="Réactiver">
                                                                <i class="bi bi-check-circle"></i>
                                                            </button>
                                                        </form>
                                                    {% else %}
                                                        <button type="button" 
                                                                class="btn btn-sm btn-outline-danger"
                                                                data-bs-toggle="modal" 
                                                                data-bs-target="#modalSuspendre{{ user.id }}"
                                                                title="Suspendre">
                                                            <i class="bi bi-slash-circle"></i>
                                                        </button>
                                                    {% endif %}
                                                {% else %}
                                                    <span class="text-muted small">—</span>
                                                {% endif %}
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="p-5 text-center">
                            <i class="bi bi-search text-muted" style="font-size: 3rem;"></i>
                            <h5 class="mt-3">Aucun utilisateur trouvé</h5>
                            <p class="text-muted mb-0">Modifiez vos critères de recherche.</p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </section>

    {# Modals Suspendre #}
    {% for user in utilisateurs %}
        {% if user.role != 'ADMIN' and not user.isSuspended %}
            <div class="modal fade" id="modalSuspendre{{ user.id }}" tabindex="-1" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header border-0 bg-danger text-white">
                            <h5 class="modal-title">
                                <i class="bi bi-slash-circle me-2"></i>Suspendre le compte
                            </h5>
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Fermer"></button>
                        </div>
                        <div class="modal-body">
                            <p>Êtes-vous sûr de vouloir suspendre le compte de <strong>{{ user.pseudo }}</strong> ?</p>
                            <p class="text-muted small mb-0">L'utilisateur ne pourra plus se connecter ni utiliser la plateforme.</p>
                        </div>
                        <div class="modal-footer border-0">
                            <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Annuler</button>
                            <form action="{{ path('app_admin_suspendre', {'id': user.id}) }}" method="POST" class="d-inline">
                                <input type="hidden" name="_token" value="{{ csrf_token('suspendre_' ~ user.id) }}">
                                <button type="submit" class="btn btn-danger">Suspendre</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
    {% endfor %}
{% endblock %}