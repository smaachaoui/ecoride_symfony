{% extends 'base.html.twig' %}

{% block title %}Statistiques - Admin EcoRide{% endblock %}

{% block body %}
<section class="py-5 bg-light min-vh-100">
    <div class="container">
        {# Breadcrumb #}
        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('app_admin_dashboard') }}">Admin</a></li>
                <li class="breadcrumb-item active">Statistiques</li>
            </ol>
        </nav>

        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3 text-dark-green mb-0">
                <i class="bi bi-graph-up me-2"></i>Statistiques
            </h1>
        </div>

        {# Cr√©dits plateforme #}
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card border-0 shadow-sm h-100 bg-dark-green text-white">
                    <div class="card-body text-center py-4">
                        <i class="bi bi-coin fs-1 mb-3"></i>
                        <h2 class="display-4 fw-bold">{{ creditsPlateforme }}</h2>
                        <p class="mb-0">Cr√©dits gagn√©s par la plateforme</p>
                        <small class="opacity-75">(2 cr√©dits par participation accept√©e)</small>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white border-0 py-3">
                        <h5 class="mb-0 text-dark-green">
                            <i class="bi bi-bar-chart me-2"></i>Cr√©dits par mois
                        </h5>
                    </div>
                    <div class="card-body">
                        {% if creditsParMois|length > 0 %}
                            <div class="table-responsive">
                                <table class="table table-sm">
                                    <thead>
                                        <tr>
                                            <th>Mois</th>
                                            <th class="text-end">Cr√©dits</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for stat in creditsParMois %}
                                            <tr>
                                                <td>{{ stat.mois }}</td>
                                                <td class="text-end">
                                                    <span class="badge bg-success">{{ stat.credits }}</span>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        {% else %}
                            <p class="text-muted text-center mb-0">Aucune donn√©e disponible</p>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        <div class="row g-4 mb-4">
            {# Covoiturages par mois #}
            <div class="col-lg-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white border-0 py-3">
                        <h5 class="mb-0 text-dark-green">
                            <i class="bi bi-car-front me-2"></i>Covoiturages par mois
                        </h5>
                    </div>
                    <div class="card-body">
                        {% if statsParMois|length > 0 %}
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Mois</th>
                                            <th class="text-end">Total</th>
                                            <th class="text-end">√âcologiques</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for stat in statsParMois %}
                                            <tr>
                                                <td>{{ stat.mois }}</td>
                                                <td class="text-end">{{ stat.total_covoiturages }}</td>
                                                <td class="text-end">
                                                    <span class="badge bg-success">
                                                        <i class="bi bi-leaf me-1"></i>{{ stat.covoiturages_eco }}
                                                    </span>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        {% else %}
                            <p class="text-muted text-center mb-0">Aucune donn√©e disponible</p>
                        {% endif %}
                    </div>
                </div>
            </div>

            {# Top chauffeurs #}
            <div class="col-lg-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white border-0 py-3">
                        <h5 class="mb-0 text-dark-green">
                            <i class="bi bi-trophy me-2"></i>Top chauffeurs
                        </h5>
                    </div>
                    <div class="card-body">
                        {% if topChauffeurs|length > 0 %}
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Chauffeur</th>
                                            <th class="text-end">Covoiturages</th>
                                            <th class="text-end">√âco</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for i, chauffeur in topChauffeurs %}
                                            <tr>
                                                <td>
                                                    {% if i == 0 %}
                                                        <span class="badge bg-warning text-dark">ü•á</span>
                                                    {% elseif i == 1 %}
                                                        <span class="badge bg-secondary">ü•à</span>
                                                    {% elseif i == 2 %}
                                                        <span class="badge bg-danger">ü•â</span>
                                                    {% else %}
                                                        {{ i + 1 }}
                                                    {% endif %}
                                                </td>
                                                <td>
                                                    <div class="d-flex align-items-center">
                                                        {% if chauffeur.photo %}
                                                            <img src="{{ asset('uploads/photos/' ~ chauffeur.photo) }}" 
                                                                 class="rounded-circle me-2" width="30" height="30"
                                                                 style="object-fit: cover;">
                                                        {% else %}
                                                            <div class="rounded-circle bg-light-green d-flex align-items-center justify-content-center me-2" 
                                                                 style="width: 30px; height: 30px;">
                                                                <i class="bi bi-person text-dark-green small"></i>
                                                            </div>
                                                        {% endif %}
                                                        {{ chauffeur.pseudo }}
                                                    </div>
                                                </td>
                                                <td class="text-end">{{ chauffeur.nb_covoiturages }}</td>
                                                <td class="text-end">
                                                    <span class="badge bg-success">{{ chauffeur.nb_eco }}</span>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        {% else %}
                            <p class="text-muted text-center mb-0">Aucune donn√©e disponible</p>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        {# Trajets populaires #}
        <div class="card border-0 shadow-sm">
            <div class="card-header bg-white border-0 py-3">
                <h5 class="mb-0 text-dark-green">
                    <i class="bi bi-signpost-split me-2"></i>Trajets les plus populaires
                </h5>
            </div>
            <div class="card-body">
                {% if trajetsPopulaires|length > 0 %}
                    <div class="row">
                        {% for trajet in trajetsPopulaires %}
                            <div class="col-md-4 mb-3">
                                <div class="border rounded p-3 h-100">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <strong>{{ trajet.ville_depart }}</strong>
                                            <i class="bi bi-arrow-right mx-2 text-muted"></i>
                                            <strong>{{ trajet.ville_arrivee }}</strong>
                                        </div>
                                        <span class="badge bg-primary">{{ trajet.nb_trajets }} trajets</span>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <p class="text-muted text-center mb-0">Aucune donn√©e disponible</p>
                {% endif %}
            </div>
        </div>
    </div>
</section>
{% endblock %}