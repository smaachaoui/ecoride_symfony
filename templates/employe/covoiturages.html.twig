{# templates/employe/covoiturages.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Covoiturages - Espace Employé - EcoRide{% endblock %}

{% block body %}
    <section class="py-5 bg-light min-vh-100">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="h3 text-dark-green mb-1">
                        <i class="bi bi-car-front me-2"></i>Covoiturages
                    </h1>
                    <p class="text-muted mb-0">Visualisez les trajets par date</p>
                </div>
                <a href="{{ path('app_employe_dashboard') }}" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-1"></i>Retour au tableau de bord
                </a>
            </div>

            {# Sélecteur de date #}
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body">
                    <form method="GET" class="row g-3 align-items-end">
                        <div class="col-md-4">
                            <label for="date" class="form-label">Sélectionner une date</label>
                            <input type="date" class="form-control" id="date" name="date" 
                                   value="{{ dateSelectionnee|date('Y-m-d') }}">
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-search me-1"></i>Rechercher
                            </button>
                        </div>
                        <div class="col-md-6 text-md-end">
                            <a href="{{ path('app_employe_covoiturages', {'date': 'now'|date('Y-m-d')}) }}" 
                               class="btn btn-outline-success">
                                Aujourd'hui
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            {# Liste des covoiturages #}
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="mb-0">
                        <i class="bi bi-calendar-event me-2"></i>
                        Covoiturages du {{ dateSelectionnee|date('d/m/Y') }}
                        <span class="badge bg-dark-green ms-2">{{ covoiturages|length }}</span>
                    </h5>
                </div>
                <div class="card-body p-0">
                    {% if covoiturages|length > 0 %}
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Heure</th>
                                        <th>Trajet</th>
                                        <th>Chauffeur</th>
                                        <th>Véhicule</th>
                                        <th>Places</th>
                                        <th>Passagers</th>
                                        <th>Prix</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for covoit in covoiturages %}
                                        <tr>
                                            <td>
                                                <span class="fw-medium">{{ covoit.dateDepart|date('H:i') }}</span>
                                            </td>
                                            <td>
                                                {{ covoit.villeDepart }}
                                                <i class="bi bi-arrow-right mx-1 text-muted"></i>
                                                {{ covoit.villeArrivee }}
                                                {% if covoit.ecologique %}
                                                    <span class="badge bg-success ms-1">Éco</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                <span class="fw-medium">{{ covoit.utilisateurId.pseudo }}</span>
                                            </td>
                                            <td class="small text-muted">
                                                {{ covoit.vehiculeId.marque }} {{ covoit.vehiculeId.modele }}
                                            </td>
                                            <td>
                                                <span class="badge {{ covoit.placesRestantes > 0 ? 'bg-success' : 'bg-secondary' }}">
                                                    {{ covoit.placesRestantes }}/{{ covoit.vehiculeId.placesDisponibles }}
                                                </span>
                                            </td>
                                            <td>
                                                {% if covoit.participations|length > 0 %}
                                                    <button type="button" 
                                                            class="btn btn-sm btn-outline-secondary"
                                                            data-bs-toggle="popover"
                                                            data-bs-html="true"
                                                            data-bs-trigger="hover"
                                                            data-bs-title="Passagers"
                                                            data-bs-content="{% for p in covoit.participations %}<div>{{ p.utilisateurId.pseudo }}</div>{% endfor %}">
                                                        {{ covoit.participations|length }} passager(s)
                                                    </button>
                                                {% else %}
                                                    <span class="text-muted">Aucun</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                <span class="fw-medium">{{ covoit.prix }}</span> cr.
                                            </td>
                                            <td>
                                                <div class="btn-group">
                                                    <a href="{{ path('app_covoiturage_detail', {'id': covoit.id}) }}" 
                                                       class="btn btn-sm btn-outline-success" target="_blank">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                    <button type="button" 
                                                            class="btn btn-sm btn-outline-danger"
                                                            data-bs-toggle="modal" 
                                                            data-bs-target="#modalProbleme{{ covoit.id }}">
                                                        <i class="bi bi-exclamation-triangle"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="p-5 text-center">
                            <i class="bi bi-calendar-x text-muted" style="font-size: 3rem;"></i>
                            <h5 class="mt-3">Aucun covoiturage</h5>
                            <p class="text-muted mb-0">Aucun covoiturage prévu pour cette date.</p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </section>

    {# Modals Problème #}
    {% for covoit in covoiturages %}
        <div class="modal fade" id="modalProbleme{{ covoit.id }}" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header border-0 bg-danger text-white">
                        <h5 class="modal-title">
                            <i class="bi bi-exclamation-triangle me-2"></i>Signaler un problème
                        </h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Fermer"></button>
                    </div>
                    <form action="{{ path('app_employe_signaler_probleme', {'id': covoit.id}) }}" method="POST">
                        <div class="modal-body">
                            <input type="hidden" name="_token" value="{{ csrf_token('probleme_' ~ covoit.id) }}">
                            
                            <div class="alert alert-info">
                                <strong>Trajet :</strong> {{ covoit.villeDepart }} → {{ covoit.villeArrivee }}<br>
                                <strong>Chauffeur :</strong> {{ covoit.utilisateurId.pseudo }}<br>
                                <strong>Date :</strong> {{ covoit.dateDepart|date('d/m/Y à H:i') }}
                            </div>

                            <div class="alert alert-warning">
                                <i class="bi bi-info-circle me-2"></i>
                                <strong>{{ covoit.participations|length }}</strong> passager(s) sera(ont) remboursé(s).
                            </div>

                            <div class="mb-3">
                                <label for="motif{{ covoit.id }}" class="form-label">Motif du problème</label>
                                <textarea class="form-control" id="motif{{ covoit.id }}" name="motif" rows="3" 
                                          placeholder="Décrivez le problème..." required></textarea>
                            </div>
                        </div>
                        <div class="modal-footer border-0">
                            <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Annuler</button>
                            <button type="submit" class="btn btn-danger">Signaler et rembourser</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    {% endfor %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Initialiser les popovers Bootstrap
        document.addEventListener('DOMContentLoaded', function() {
            var popoverTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="popover"]'));
            popoverTriggerList.map(function (popoverTriggerEl) {
                return new bootstrap.Popover(popoverTriggerEl);
            });
        });
    </script>
{% endblock %}