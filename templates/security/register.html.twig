{# templates/security/register.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Inscription - EcoRide{% endblock %}

{% block body %}
    <section class="py-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-5">
                    <div class="card border-0 shadow">
                        <div class="card-body p-5">
                            <div class="text-center mb-4">
                                <div class="bg-light-green rounded-circle d-inline-flex align-items-center justify-content-center mb-3" 
                                     style="width: 70px; height: 70px;">
                                    <i class="bi bi-person-plus text-dark-green" style="font-size: 1.8rem;"></i>
                                </div>
                                <h1 class="h3 text-dark-green">Créer un compte</h1>
                                <p class="text-muted">Rejoignez la communauté EcoRide</p>
                            </div>

                            {# Avantage inscription #}
                            <div class="alert alert-success mb-4">
                                <i class="bi bi-gift me-2"></i>
                                <strong>20 crédits offerts</strong> à l'inscription !
                            </div>

                            {{ form_start(form, {'attr': {'class': 'registration-form', 'novalidate': 'novalidate'}}) }}
                                
                                <div class="mb-3">
                                    {{ form_label(form.pseudo) }}
                                    {{ form_widget(form.pseudo) }}
                                    {{ form_errors(form.pseudo) }}
                                </div>

                                <div class="mb-3">
                                    {{ form_label(form.email) }}
                                    {{ form_widget(form.email) }}
                                    {{ form_errors(form.email) }}
                                </div>

                                <div class="mb-3">
                                    {{ form_label(form.plainPassword.first) }}
                                    {{ form_widget(form.plainPassword.first) }}
                                    {{ form_errors(form.plainPassword.first) }}
                                    <div class="form-text">
                                        <small>
                                            <i class="bi bi-info-circle me-1"></i>
                                            Min. 8 caractères avec majuscule, minuscule, chiffre et caractère spécial
                                        </small>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    {{ form_label(form.plainPassword.second) }}
                                    {{ form_widget(form.plainPassword.second) }}
                                    {{ form_errors(form.plainPassword.second) }}
                                </div>

                                <div class="mb-4">
                                    <div class="form-check">
                                        {{ form_widget(form.agreeTerms) }}
                                        <label class="form-check-label" for="{{ form.agreeTerms.vars.id }}">
                                            J'accepte les <a href="{{ path('app_mentions_legales') }}" target="_blank" class="text-dark-green">conditions d'utilisation</a>
                                        </label>
                                    </div>
                                    {{ form_errors(form.agreeTerms) }}
                                </div>

                                {{ form_widget(form.submit) }}

                            {{ form_end(form) }}

                            <hr class="my-4">

                            <p class="text-center text-muted mb-0">
                                Déjà un compte ? 
                                <a href="{{ path('app_login') }}" class="text-dark-green fw-medium">Connectez-vous</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}