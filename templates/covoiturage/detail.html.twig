{# templates/covoiturage/detail.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}{{ covoiturage.villeDepart }} → {{ covoiturage.villeArrivee }} - EcoRide{% endblock %}

{% block body %}
    <section class="py-5">
        <div class="container">
            {# Bouton retour #}
            <a href="{{ path('app_covoiturages') }}" class="btn btn-outline-secondary mb-4">
                <i class="bi bi-arrow-left me-2"></i>Retour aux résultats
            </a>

            <div class="row">
                {# Colonne principale - Infos du trajet #}
                <div class="col-lg-8">
                    {# Card trajet #}
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-body p-4">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <h1 class="h3 text-dark-green mb-0">
                                    {{ covoiturage.villeDepart }}
                                    <i class="bi bi-arrow-right mx-2"></i>
                                    {{ covoiturage.villeArrivee }}
                                </h1>
                                {% if covoiturage.ecologique %}
                                    <span class="badge bg-success fs-6">
                                        <i class="bi bi-leaf me-1"></i>Écologique
                                    </span>
                                {% endif %}
                            </div>

                            <div class="row g-4 mt-2">
                                <div class="col-md-6">
                                    <div class="d-flex align-items-center mb-3">
                                        <div class="bg-light-green rounded-circle p-2 me-3">
                                            <i class="bi bi-calendar text-dark-green"></i>
                                        </div>
                                        <div>
                                            <small class="text-muted d-block">Date de départ</small>
                                            <strong>{{ covoiturage.dateDepart|date('d/m/Y') }}</strong>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="d-flex align-items-center mb-3">
                                        <div class="bg-light-green rounded-circle p-2 me-3">
                                            <i class="bi bi-clock text-dark-green"></i>
                                        </div>
                                        <div>
                                            <small class="text-muted d-block">Heure de départ</small>
                                            <strong>{{ covoiturage.dateDepart|date('H:i') }}</strong>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="d-flex align-items-center mb-3">
                                        <div class="bg-light-green rounded-circle p-2 me-3">
                                            <i class="bi bi-people text-dark-green"></i>
                                        </div>
                                        <div>
                                            <small class="text-muted d-block">Places restantes</small>
                                            <strong>{{ covoiturage.placesRestantes }} place{{ covoiturage.placesRestantes > 1 ? 's' : '' }}</strong>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="d-flex align-items-center mb-3">
                                        <div class="bg-light-green rounded-circle p-2 me-3">
                                            <i class="bi bi-coin text-dark-green"></i>
                                        </div>
                                        <div>
                                            <small class="text-muted d-block">Prix par personne</small>
                                            <strong class="text-dark-green fs-5">{{ covoiturage.prix|number_format(0, ',', ' ') }} crédits</strong>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    {# Card véhicule #}
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-white border-0 pt-4 pb-0 px-4">
                            <h2 class="h5 text-dark-green mb-0">
                                <i class="bi bi-car-front me-2"></i>Véhicule
                            </h2>
                        </div>
                        <div class="card-body p-4">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <small class="text-muted d-block">Marque</small>
                                    <strong>{{ covoiturage.vehiculeId.marque }}</strong>
                                </div>
                                <div class="col-md-6">
                                    <small class="text-muted d-block">Modèle</small>
                                    <strong>{{ covoiturage.vehiculeId.modele }}</strong>
                                </div>
                                <div class="col-md-6">
                                    <small class="text-muted d-block">Énergie</small>
                                    <span class="badge {{ covoiturage.vehiculeId.energie == 'Electrique' ? 'bg-success' : 'bg-secondary' }}">
                                        {{ covoiturage.vehiculeId.energie }}
                                    </span>
                                </div>
                                <div class="col-md-6">
                                    <small class="text-muted d-block">Places disponibles</small>
                                    <strong>{{ covoiturage.vehiculeId.placesDisponibles }}</strong>
                                </div>
                            </div>
                        </div>
                    </div>

                    {# Card avis du chauffeur #}
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-white border-0 pt-4 pb-0 px-4">
                            <h2 class="h5 text-dark-green mb-0">
                                <i class="bi bi-chat-quote me-2"></i>Avis des passagers
                            </h2>
                        </div>
                        <div class="card-body p-4">
                            {% set avisValides = covoiturage.utilisateurId.avis|filter(a => a.statut is defined and a.statut == 'valide') %}
                            
                            {% if covoiturage.utilisateurId.avis|length > 0 %}
                                <div class="list-group list-group-flush">
                                    {% for avis in covoiturage.utilisateurId.avis %}
                                        {% include 'covoiturage/_avis_card.html.twig' with {'avis': avis} %}
                                    {% endfor %}
                                </div>
                            {% else %}
                                <div class="text-center py-4">
                                    <i class="bi bi-chat-dots text-muted" style="font-size: 2rem;"></i>
                                    <p class="text-muted mt-2 mb-0">Aucun avis pour le moment</p>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>

                {# Colonne latérale - Chauffeur + Participation #}
                <div class="col-lg-4">
                    {# Card chauffeur #}
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-body p-4 text-center">
                            {% if covoiturage.utilisateurId.photo %}
                                <img src="{{ asset('uploads/photos/' ~ covoiturage.utilisateurId.photo) }}" 
                                     alt="{{ covoiturage.utilisateurId.pseudo }}" 
                                     class="rounded-circle mb-3" 
                                     width="100" height="100"
                                     style="object-fit: cover;">
                            {% else %}
                                <div class="rounded-circle bg-light-green d-flex align-items-center justify-content-center mb-3 mx-auto" 
                                     style="width: 100px; height: 100px;">
                                    <i class="bi bi-person text-dark-green" style="font-size: 2.5rem;"></i>
                                </div>
                            {% endif %}

                            <h3 class="h5 mb-1">{{ covoiturage.utilisateurId.pseudo }}</h3>
                            
                            {# Note moyenne #}
                            {% set totalNotes = 0 %}
                            {% set nbAvis = covoiturage.utilisateurId.avis|length %}
                            {% for avis in covoiturage.utilisateurId.avis %}
                                {% set totalNotes = totalNotes + avis.note %}
                            {% endfor %}
                            {% set noteMoyenne = nbAvis > 0 ? (totalNotes / nbAvis)|round(1) : null %}

                            <div class="d-flex align-items-center justify-content-center mb-3">
                                {% if noteMoyenne %}
                                    {% for i in 1..5 %}
                                        {% if i <= noteMoyenne %}
                                            <i class="bi bi-star-fill text-warning"></i>
                                        {% elseif i - 0.5 <= noteMoyenne %}
                                            <i class="bi bi-star-half text-warning"></i>
                                        {% else %}
                                            <i class="bi bi-star text-warning"></i>
                                        {% endif %}
                                    {% endfor %}
                                    <span class="ms-2 text-muted">({{ noteMoyenne }})</span>
                                {% else %}
                                    <span class="text-muted">Nouveau conducteur</span>
                                {% endif %}
                            </div>

                            <p class="text-muted small mb-0">
                                <i class="bi bi-car-front me-1"></i>
                                {{ nbAvis }} trajet{{ nbAvis > 1 ? 's' : '' }} réalisé{{ nbAvis > 1 ? 's' : '' }}
                            </p>
                        </div>
                    </div>

                    {# Card préférences #}
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-white border-0 pt-4 pb-0 px-4">
                            <h4 class="h6 text-dark-green mb-0">
                                <i class="bi bi-sliders me-2"></i>Préférences du chauffeur
                            </h4>
                        </div>
                        <div class="card-body p-4">
                            {% set preferences = null %}
                            {# Récupérer les préférences du chauffeur #}
                            
                            <div class="d-flex align-items-center mb-3">
                                <i class="bi bi-{{ covoiturage.utilisateurId.preferences is defined and covoiturage.utilisateurId.preferences.accepteFumeurs ? 'check-circle text-success' : 'x-circle text-danger' }} me-2 fs-5"></i>
                                <span>Fumeur {{ covoiturage.utilisateurId.preferences is defined and covoiturage.utilisateurId.preferences.accepteFumeurs ? 'accepté' : 'non accepté' }}</span>
                            </div>
                            <div class="d-flex align-items-center">
                                <i class="bi bi-{{ covoiturage.utilisateurId.preferences is defined and covoiturage.utilisateurId.preferences.accepteAnimaux ? 'check-circle text-success' : 'x-circle text-danger' }} me-2 fs-5"></i>
                                <span>Animaux {{ covoiturage.utilisateurId.preferences is defined and covoiturage.utilisateurId.preferences.accepteAnimaux ? 'acceptés' : 'non acceptés' }}</span>
                            </div>
                        </div>
                    </div>

                    {# Card participation #}
                    <div class="card border-0 shadow-sm bg-light-green">
                        <div class="card-body p-4 text-center">
                            <p class="h4 text-dark-green mb-1">{{ covoiturage.prix|number_format(0, ',', ' ') }} crédits</p>
                            <p class="text-muted small mb-4">par personne</p>

                            {% if estChauffeur %}
                                {# L'utilisateur est le chauffeur #}
                                <div class="alert alert-info mb-0">
                                    <i class="bi bi-info-circle me-2"></i>
                                    Vous êtes le chauffeur de ce trajet
                                </div>

                            {% elseif dejaParticipant %}
                                {# L'utilisateur participe déjà #}
                                <div class="alert alert-success mb-0">
                                    <i class="bi bi-check-circle me-2"></i>
                                    Vous participez à ce covoiturage
                                </div>

                            {% elseif covoiturage.placesRestantes > 0 %}
                                {# Places disponibles #}
                                {% if app.user %}
                                    {% if app.user.credits >= covoiturage.prix %}
                                        <a href="{{ path('app_covoiturage_participer', {'id': covoiturage.id}) }}" 
                                        class="btn btn-primary btn-lg w-100">
                                            <i class="bi bi-check-circle me-2"></i>Participer
                                        </a>
                                        <p class="text-muted small mt-2 mb-0">
                                            <i class="bi bi-wallet me-1"></i>
                                            Votre solde : {{ app.user.credits }} crédits
                                        </p>
                                    {% else %}
                                        <button class="btn btn-secondary btn-lg w-100" disabled>
                                            <i class="bi bi-wallet2 me-2"></i>Crédits insuffisants
                                        </button>
                                        <p class="text-danger small mt-2 mb-0">
                                            <i class="bi bi-exclamation-circle me-1"></i>
                                            Votre solde : {{ app.user.credits }} crédits
                                        </p>
                                    {% endif %}
                                {% else %}
                                    <a href="{{ path('app_login', {'redirect': path('app_covoiturage_detail', {'id': covoiturage.id})}) }}" 
                                    class="btn btn-primary btn-lg w-100">
                                        <i class="bi bi-box-arrow-in-right me-2"></i>Connectez-vous pour participer
                                    </a>
                                {% endif %}
                                
                                <p class="text-muted small mt-2 mb-0">
                                    <i class="bi bi-info-circle me-1"></i>
                                    {{ covoiturage.placesRestantes }} place{{ covoiturage.placesRestantes > 1 ? 's' : '' }} restante{{ covoiturage.placesRestantes > 1 ? 's' : '' }}
                                </p>

                            {% else %}
                                {# Complet #}
                                <button class="btn btn-secondary btn-lg w-100" disabled>
                                    <i class="bi bi-x-circle me-2"></i>Complet
                                </button>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}