{# templates/covoiturage/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Covoiturages - EcoRide{% endblock %}

{% block body %}
    <section class="py-5 bg-light-green">
        <div class="container">
            <h1 class="text-center text-dark-green mb-4">Rechercher un covoiturage</h1>

            <div class="row justify-content-center">
                <div class="col-lg-10">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body p-4">
                            {{ form_start(form, {'attr': {'class': 'search-form'}}) }}
                                
                                {# Recherche principale #}
                                <div class="row g-3 align-items-end">
                                    <div class="col-md-3">
                                        {{ form_label(form.ville_depart) }}
                                        {{ form_widget(form.ville_depart) }}
                                        {{ form_errors(form.ville_depart) }}
                                    </div>
                                    <div class="col-md-3">
                                        {{ form_label(form.ville_arrivee) }}
                                        {{ form_widget(form.ville_arrivee) }}
                                        {{ form_errors(form.ville_arrivee) }}
                                    </div>
                                    <div class="col-md-3">
                                        {{ form_label(form.date) }}
                                        {{ form_widget(form.date) }}
                                        {{ form_errors(form.date) }}
                                    </div>
                                    <div class="col-md-3">
                                        {{ form_widget(form.rechercher) }}
                                    </div>
                                </div>

                                {# Filtres avancés (accordion) #}
                                <div class="mt-4">
                                    <div class="accordion" id="filtresAccordion">
                                        <div class="accordion-item border-0">
                                            <h2 class="accordion-header" id="filtresHeading">
                                                <button class="accordion-button {{ filtresActifs is defined and filtresActifs ? '' : 'collapsed' }} bg-light text-dark-green" 
                                                        type="button" 
                                                        data-bs-toggle="collapse" 
                                                        data-bs-target="#filtresCollapse" 
                                                        aria-expanded="{{ filtresActifs is defined and filtresActifs ? 'true' : 'false' }}" 
                                                        aria-controls="filtresCollapse">
                                                    <i class="bi bi-filter me-2"></i>
                                                    Filtres avancés
                                                    {% if filtresActifs is defined and filtresActifs %}
                                                        <span class="badge bg-success ms-2">Actifs</span>
                                                    {% endif %}
                                                </button>
                                            </h2>
                                            <div id="filtresCollapse" 
                                                 class="accordion-collapse collapse {{ filtresActifs is defined and filtresActifs ? 'show' : '' }}" 
                                                 aria-labelledby="filtresHeading" 
                                                 data-bs-parent="#filtresAccordion">
                                                <div class="accordion-body bg-light">
                                                    <div class="row g-3">
                                                        <div class="col-md-3">
                                                            <div class="form-check">
                                                                {{ form_widget(form.ecologique) }}
                                                                {{ form_label(form.ecologique, null, {'label_attr': {'class': 'form-check-label'}}) }}
                                                            </div>
                                                        </div>
                                                        <div class="col-md-3">
                                                            {{ form_label(form.prix_max) }}
                                                            {{ form_widget(form.prix_max) }}
                                                            {{ form_errors(form.prix_max) }}
                                                        </div>
                                                        <div class="col-md-3">
                                                            {{ form_label(form.duree_max) }}
                                                            {{ form_widget(form.duree_max) }}
                                                            {{ form_errors(form.duree_max) }}
                                                        </div>
                                                        <div class="col-md-3">
                                                            {{ form_label(form.note_min) }}
                                                            {{ form_widget(form.note_min) }}
                                                            {{ form_errors(form.note_min) }}
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="py-5">
        <div class="container">
            {% if recherche %}
                {% if covoiturages is not empty %}
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h2 class="text-dark-green mb-0">
                            <i class="bi bi-car-front me-2"></i>
                            {{ covoiturages|length }} covoiturage{{ covoiturages|length > 1 ? 's' : '' }} trouvé{{ covoiturages|length > 1 ? 's' : '' }}
                        </h2>
                        
                        {% if filtresActifs %}
                            <a href="{{ path('app_covoiturages', {
                                'ville_depart': app.request.query.get('ville_depart'),
                                'ville_arrivee': app.request.query.get('ville_arrivee'),
                                'date': app.request.query.get('date')
                            }) }}" class="btn btn-outline-secondary btn-sm">
                                <i class="bi bi-x-circle me-1"></i>
                                Réinitialiser les filtres
                            </a>
                        {% endif %}
                    </div>

                    <div class="row g-4">
                        {% for covoiturage in covoiturages %}
                            {% include 'covoiturage/_card.html.twig' with {'covoiturage': covoiturage} %}
                        {% endfor %}
                    </div>

                {% else %}
                    <div class="text-center py-5">
                        <div class="mb-4">
                            <i class="bi bi-search text-muted" style="font-size: 4rem;"></i>
                        </div>
                        <h2 class="text-dark-green">Aucun covoiturage trouvé</h2>
                        <p class="text-muted">
                            Aucun trajet ne correspond à votre recherche
                            {% if filtresActifs %}avec les filtres sélectionnés{% endif %}.
                        </p>

                        {% if filtresActifs %}
                            <a href="{{ path('app_covoiturages', {
                                'ville_depart': app.request.query.get('ville_depart'),
                                'ville_arrivee': app.request.query.get('ville_arrivee'),
                                'date': app.request.query.get('date')
                            }) }}" class="btn btn-outline-secondary mb-3">
                                <i class="bi bi-x-circle me-1"></i>
                                Essayer sans filtres
                            </a>
                        {% endif %}

                        {% if prochainCovoiturage %}
                            <div class="alert alert-success d-inline-block mt-3">
                                <i class="bi bi-lightbulb me-2"></i>
                                <strong>Suggestion :</strong> Un covoiturage est disponible le 
                                <strong>{{ prochainCovoiturage.dateDepart|date('d/m/Y') }}</strong>
                                <a href="{{ path('app_covoiturages', {
                                    'ville_depart': app.request.query.get('ville_depart'),
                                    'ville_arrivee': app.request.query.get('ville_arrivee'),
                                    'date': prochainCovoiturage.dateDepart|date('Y-m-d')
                                }) }}" class="btn btn-sm btn-primary ms-2">
                                    Voir ce trajet
                                </a>
                            </div>
                        {% endif %}
                    </div>
                {% endif %}

            {% else %}
                <div class="text-center py-5">
                    <div class="mb-4">
                        <i class="bi bi-signpost-split text-medium-green" style="font-size: 4rem;"></i>
                    </div>
                    <h2 class="text-dark-green">Trouvez votre covoiturage</h2>
                    <p class="text-muted">Remplissez le formulaire ci-dessus pour rechercher un trajet.</p>
                </div>
            {% endif %}
        </div>
    </section>
{% endblock %}