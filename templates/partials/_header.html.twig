{# templates/partials/_header.html.twig #}

<nav class="navbar navbar-expand-lg navbar-dark bg-dark-green shadow-sm sticky-top">
    <div class="container">
        <a class="navbar-brand" href="{{ path('app_home') }}">
            <img src="{{ asset('images/logo.png') }}" alt="EcoRide" height="50" class="logo-circle">
        </a>
        
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto align-items-center">
                <li class="nav-item">
                    <a class="nav-link {% if app.request.attributes.get('_route') == 'app_home' %}active{% endif %}" href="{{ path('app_home') }}">
                        Accueil
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {% if app.request.attributes.get('_route') == 'app_covoiturages' %}active{% endif %}" href="{{ path('app_covoiturages') }}">
                        Covoiturages
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {% if app.request.attributes.get('_route') == 'app_contact' %}active{% endif %}" href="{{ path('app_contact') }}">
                        Contact
                    </a>
                </li>
                
                {% if app.user %}
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-person-circle me-1"></i>
                            {{ app.user.pseudo }}
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                            <li>
                                <a class="dropdown-item" href="{{ path('app_espace_utilisateur') }}">
                                    <i class="bi bi-speedometer2 me-2"></i>Mon espace
                                </a>
                            </li>

                            {# Dans la section utilisateur connecté #}
                            {% if is_granted('ROLE_EMPLOYE') %}
                                <li>
                                    <a class="dropdown-item" href="{{ path('app_employe_dashboard') }}">
                                        <i class="bi bi-headset me-2"></i>Espace Employé
                                    </a>
                                </li>
                            {% endif %}

                            {# Dans la section utilisateur connecté, après le lien employé #}
                            {% if is_granted('ROLE_ADMIN') %}
                                <li>
                                    <a class="dropdown-item" href="{{ path('app_admin_dashboard') }}">
                                        <i class="bi bi-shield-check me-2"></i>Administration
                                    </a>
                                </li>
                            {% endif %}

                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item" href="{{ path('app_logout') }}">
                                    <i class="bi bi-box-arrow-right me-2"></i>Déconnexion
                                </a>
                            </li>
                        </ul>
                    </li>
                {% else %}

                    <li class="nav-item">
                        <a class="nav-link {% if app.request.attributes.get('_route') == 'app_login' %}active{% endif %}" href="{{ path('app_login') }}">
                            Connexion
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-primary ms-2" href="{{ path('app_register') }}">
                            Inscription
                        </a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>