{# templates/reset_password/reset.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Réinitialiser le mot de passe - EcoRide{% endblock %}

{% block body %}
    <section class="py-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-5">
                    <div class="card border-0 shadow">
                        <div class="card-body p-5">
                            <div class="text-center mb-4">
                                <div class="bg-light-green rounded-circle d-inline-flex align-items-center justify-content-center mb-3" 
                                     style="width: 70px; height: 70px;">
                                    <i class="bi bi-shield-lock text-dark-green" style="font-size: 1.8rem;"></i>
                                </div>
                                <h1 class="h3 text-dark-green">Nouveau mot de passe</h1>
                                <p class="text-muted">Choisissez un nouveau mot de passe sécurisé.</p>
                            </div>

                            {{ form_start(resetForm, {'attr': {'novalidate': 'novalidate'}}) }}
                                
                                <div class="mb-3">
                                    {{ form_label(resetForm.plainPassword.first) }}
                                    {{ form_widget(resetForm.plainPassword.first) }}
                                    {{ form_errors(resetForm.plainPassword.first) }}
                                    <div class="form-text">
                                        <small>
                                            <i class="bi bi-info-circle me-1"></i>
                                            Min. 8 caractères avec majuscule, minuscule, chiffre et caractère spécial
                                        </small>
                                    </div>
                                </div>

                                <div class="mb-4">
                                    {{ form_label(resetForm.plainPassword.second) }}
                                    {{ form_widget(resetForm.plainPassword.second) }}
                                    {{ form_errors(resetForm.plainPassword.second) }}
                                </div>

                                {{ form_widget(resetForm.submit) }}

                            {{ form_end(resetForm) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}