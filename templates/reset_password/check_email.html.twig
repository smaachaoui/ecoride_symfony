{# templates/reset_password/check_email.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Email envoyé - EcoRide{% endblock %}

{% block body %}
    <section class="py-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-5">
                    <div class="card border-0 shadow">
                        <div class="card-body p-5 text-center">
                            <div class="bg-light-green rounded-circle d-inline-flex align-items-center justify-content-center mb-4" 
                                 style="width: 80px; height: 80px;">
                                <i class="bi bi-envelope-check text-dark-green" style="font-size: 2rem;"></i>
                            </div>

                            <h1 class="h3 text-dark-green mb-3">Vérifiez votre boîte mail</h1>
                            
                            <p class="text-muted mb-4">
                                Si un compte existe avec cette adresse email, vous recevrez un lien pour réinitialiser votre mot de passe.
                            </p>

                            <div class="alert alert-info text-start">
                                <i class="bi bi-info-circle me-2"></i>
                                <small>
                                    Le lien expire dans <strong>{{ resetToken.expirationMessageKey|trans(resetToken.expirationMessageData, 'ResetPasswordBundle') }}</strong>.
                                </small>
                            </div>

                            <p class="text-muted small mb-4">
                                Si vous ne recevez pas l'email, vérifiez votre dossier spam ou 
                                <a href="{{ path('app_forgot_password_request') }}" class="text-dark-green">réessayez</a>.
                            </p>

                            <a href="{{ path('app_login') }}" class="btn btn-outline-success">
                                <i class="bi bi-arrow-left me-1"></i>Retour à la connexion
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}